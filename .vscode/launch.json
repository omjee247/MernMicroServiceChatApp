    "version": "0.2.0",
    "configurations": [
        {
        "type": "node",
        "request": "launch",
        "name": "Debug with Nodemon",
        "runtimeExecutable": "nodemon",
        "program": "${workspaceFolder}/src/index.ts",
        // "preLaunchTask": "tsc: build - tsconfig.json",
        "restart": true,
        "outFiles": ["${workspaceFolder}/dist/**/*.js"],
        "runtimeArgs": ["--nolazy"],
        "sourceMaps": true
        }
    ]


